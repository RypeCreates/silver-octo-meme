@model silver_octo_app.ViewModels.ExpenseFormViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Expenses"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.Name)
        @Html.TextBoxFor(m => m.Expense.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.ExpenseAmount)
        @Html.TextBoxFor(m => m.Expense.ExpenseAmount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.ExpenseAmount)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.BudgetItemId)
        @Html.DropDownListFor(m => m.Expense.BudgetItemId, new SelectList(Model.BudgetItems, "Id", "CategoryName"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.BudgetItemId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.ExpenseDate)
        @Html.TextBoxFor(m => m.Expense.ExpenseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.ExpenseDate)
    </div>
    @Html.HiddenFor(m => m.Expense.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}
