@model silver_octo_app.ViewModels.ListCategoriesViewModel
@{
    ViewBag.Title = "ListCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 >Categories</h2>

@if (Model.Categories.Count.Equals(0))
{
    <textarea>No items in this category.</textarea>
}
else
{
<ul>
    @foreach (var category in Model.Categories)
    {
        <li><a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index" asp-route-id="@category.Id">@category.Name</a></li>
    }
</ul>
}
