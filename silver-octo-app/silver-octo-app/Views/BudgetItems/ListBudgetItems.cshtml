@model silver_octo_app.ViewModels.ListBudgetItemsViewModel;
@{
    ViewBag.Title = "ListBudgetItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Budget Items</h2>

@if (Model.BudgetItems.Count.Equals(0))
{
    <textarea>You have no budget items yet!</textarea>
}
else
{
    <nav>
        <ul>
            @foreach (var budgetItem in Model.BudgetItems)
            {
                <li>@string.Format(budgetItem.CategoryName + '\t' + "$" + budgetItem.Amount)</li>
            }
        </ul>
    </nav>
}